<body>
<div class = "top">
<h1>Know Your World</h1>
</div>
<ul>

<div>
  <% @articles.each do |nav_headers, not_needed_articles| %>
    <%= nav_headers %>
  <% end %>
</div>

  <% @articles.each do |subsection, section_articles| %>

  <div class = "titles" >
    <h2><%= subsection %></h2> 
  </div>
    
    <% section_articles.each do |article| %>

      <h3><%= article[:title].html_safe %></h3>
      <div class = "line"> </div>
      <div class = "content">
      <p class= "article"> <%= article[:abstract].html_safe %> </p>
      <li>

      <%= link_to "Read Article", article[:link], :target => "_blank" %>

      <%= link_to "|   Look for this topic via NYTimes.com", article[:relevant_articles], :target => "_blank" %>

      <%= link_to "|   Save Article", :controller => "news", 
                                      :action => "create", 
                                      subsection: subsection,
                                      title: article[:title], 
                                      abstract: article[:abstract], 
                                      article_url: article[:link] %>
      </li>
      <div class = "line"> </div>
    </div>
    <% end %>
  <% end %>
</ul>


</body>
